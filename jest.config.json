{
  "testEnvironment": "node",
  "maxWorkers": "50%",

  "moduleDirectories": ["node_modules", "src"],

  "testMatch": ["**/*.test.ts"],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"],

  "transform": {
    ".+\\.(t|j)sx?$": "@swc/jest"
  },
  "transformIgnorePatterns": ["/node_modules/"],

  "collectCoverage": true,
  "coverageDirectory": "./coverage/"
}
